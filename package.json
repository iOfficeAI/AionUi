{
  "name": "AionUi",
  "productName": "AionUi",
  "version": "1.1.6",
  "description": "My Electron application description",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --ext .ts,.tsx . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "build-mac": "arch=$npm_config_arch identity=$npm_config_identity appleId=$npm_config_appleid appleIdPassword=$npm_config_appleidpassword teamId=$npm_config_teamid ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ DEBUG=electron-osx-sign*,electron-packager electron-forge make --verbose --platform=darwin --arch=$npm_config_arch",
    "build-win": "npm run make --platform=win32 --arch=x64",
    "build-deb": "DEBUG=electron-packager electron-forge make --verbose --platform=linux --arch=x64,arm64,armv7l",
    "build": "npm run build-mac --arch=arm64 && npm run build-mac --arch=x64",
    "build-mac:arm64": "npm run build-mac --arch=arm64",
    "build-mac:x64": "npm run build-mac --arch=x64",
    "prepare": "husky"
  },
  "keywords": [],
  "author": {
    "name": "halvee",
    "email": "halvee@office-ai.cn"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/plugin-webpack": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@unocss/webpack": "^66.3.3",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "css-loader": "^6.11.0",
    "electron": "37.2.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "mini-css-extract-plugin": "^2.9.2",
    "node-loader": "^2.1.0",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.6.2",
    "sharp": "^0.34.3",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "unocss": "^66.3.3",
    "unocss-preset-extra": "^1.0.0"
  },
  "dependencies": {
    "@arco-design/web-react": "^2.66.1",
    "@google/genai": "^1.9.0",
    "@icon-park/react": "^1.4.2",
    "@office-ai/aioncli-core": "^0.1.21",
    "@office-ai/platform": "^0.3.15",
    "@types/react-syntax-highlighter": "^15.5.13",
    "classnames": "^2.5.1",
    "diff2html": "^3.4.52",
    "dotenv": "^17.2.1",
    "electron-squirrel-startup": "^1.0.1",
    "eventemitter3": "^5.0.1",
    "fix-path": "^4.0.0",
    "html-to-text": "^9.0.5",
    "i18next": "^23.7.16",
    "i18next-browser-languagedetector": "^7.2.0",
    "jest-diff": "^30.0.4",
    "katex": "^0.16.22",
    "openai": "^5.12.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^14.0.5",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.8.0",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-katex": "^7.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "swr": "^2.3.6"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
