{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "types": ["node", "unocss"],
    "strict": false,
    "paths": {
      "@/*": ["./src/*"],
      "@process/*": ["./src/process/*"],
      "@renderer/*": ["./src/renderer/*"],
      "@worker/*": ["./src/worker/*"]
    }
  },
  "include": ["src/**/*", "uno.config.ts"],
  "exclude": ["node_modules", "dist", ".webpack", "src/tools"]
}
